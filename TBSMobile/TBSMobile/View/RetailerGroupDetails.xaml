                                </Label.FontFamily>
                            </Label>
                        </StackLayout>
                    </Frame>
                    <Frame StyleClass="detailsFrame" Grid.Row="2" Grid.Column="0" CornerRadius="0" BorderColor="Transparent" HasShadow="False">
                        <StackLayout>
                            <Label Text="Location" StyleClass="lstTitle">
                                <Label.FontFamily>
                                    <OnPlatform x:TypeArguments="x:String">
                                        <On Platform="Android" Value="HelveticaNeueLTPro-Md.otf#HelveticaNeueLTPro-Md"/>
                                    </OnPlatform>
                                </Label.FontFamily>
                            </Label>
                            <Label StyleClass="lstDetails" x:Name="lblLocation">
