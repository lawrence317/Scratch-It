                                    </OnPlatform>
                                </Label.FontFamily>
                            </Label>
                            <Label StyleClass="lstDetails" x:Name="lblMobile">
                                <Label.FontFamily>
                                    <OnPlatform x:TypeArguments="x:String">
                                        <On Platform="Android" Value="HelveticaNeueLTPro-Lt.otf#HelveticaNeueLTPro-Lt"/>
                                    </OnPlatform>
                                </Label.FontFamily>
                            </Label>
